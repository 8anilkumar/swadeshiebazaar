<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carView"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ImageView>


            </androidx.cardview.widget.CardView>





            <ImageView
                android:id="@+id/imgRemove"
                android:background="@drawable/ic_baseline_delete_forever_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </ImageView>


            <TextView
                android:id="@+id/txtName"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="gydgygd"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintLeft_toRightOf="@id/card"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgRemove">


            </TextView>


            <View
                android:id="@+id/txtView"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintLeft_toRightOf="@id/card"
                android:layout_marginLeft="@dimen/_5sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0sp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="@dimen/_1sdp">

            </View>


            <TextView
                android:id="@+id/txtDeatils"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:maxLines="3"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/card"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtView">


            </TextView>


            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:maxLines="3"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/card"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDeatils">


            </TextView>



            <TextView
                android:id="@+id/txtQty"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/card"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAmount">


            </TextView>







            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                app:layout_constraintTop_toBottomOf="@+id/txtAmount"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:id="@+id/number_qty"
                android:layout_width="@dimen/_60sdp"
                app:backGroundColor="@color/colorPrimary"
                android:layout_marginRight="@dimen/_10sdp"
                android:visibility="invisible"
                android:layout_height="@dimen/_20sdp">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            <Button

                app:layout_constraintTop_toBottomOf="@+id/txtAmount"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:id="@+id/btAdd"
                android:text="add"
                android:layout_width="@dimen/_60sdp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="@dimen/_20sdp">


            </Button>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>