<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/addressCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/shipping"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>



            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Apurv Singh"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="@+id/txtShipping"
                app:layout_constraintTop_toBottomOf="@id/view2">

            </TextView>


            <TextView
                android:id="@+id/txtAddres"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Ostron Electronics 605/P05 lko"
                app:layout_constraintLeft_toLeftOf="@+id/txtShipping"
                app:layout_constraintTop_toBottomOf="@id/txtName">

            </TextView>


            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Number-8960020275"
                app:layout_constraintLeft_toLeftOf="@+id/txtShipping"
                app:layout_constraintTop_toBottomOf="@id/txtAddres">

            </TextView>

            <Button
                android:id="@+id/btSetAddress"
                app:layout_constraintTop_toBottomOf="@+id/txtNumber"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="@string/atrhislocation"
                android:layout_height="@dimen/_30sdp">
            </Button>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/txtShipping">

            </View>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>