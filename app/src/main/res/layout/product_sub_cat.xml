<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvHarbalProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btFSell"
        app:layout_constraintBottom_toBottomOf="@+id/tvHarbalProduct"
        app:layout_constraintTop_toTopOf="@+id/tvHarbalProduct"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="@string/see_all"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bt_cornor"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_20sdp">

    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHarbalProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvHarbalProduct" />


</androidx.constraintlayout.widget.ConstraintLayout>